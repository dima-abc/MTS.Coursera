<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="160202024_006" author="dima_abc">
        <createTable tableName="lesson" schemaName="my_courses">
            <column name="id" type="bigserial" autoIncrement="true">
                <constraints primaryKey="true" unique="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(255)"/>
            <column name="description" type="text"/>
            <column name="content" type="varchar"/>
            <column name="theme_id" type="bigserial">
                <constraints nullable="false"
                             referencedTableSchemaName="my_courses"
                             referencedTableName="theme"
                             referencedColumnNames="id"
                             foreignKeyName="fk_lesson_theme"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>